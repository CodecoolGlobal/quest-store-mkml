{% include "../static/mentor-header.html" %}

<section class="main-info" xmlns="http://www.w3.org/1999/html">

    <div class="student-info-container">
        <div class="student-info-table new-student">

            <div class="user-category-name student-category"></div>

            <div class="student-profile-picture">
                <img src="../static/assets/images/student-card/student.png" alt="Student" class="student-picture" />
            </div>

            <div class="student-information">
                <input type="text" name="name" placeholder="Name" id="userName" required="required" class="new-student-template" />
                <input type="email" name="email" placeholder="Email" id="userEmail" required="required" class="new-student-template" />
                <input type="text" name="text" placeholder="Class" id="userClass" required="required" class="new-student-template" />
            </div>

            <button class="submit-button" onclick="sendNewStudentData()" />Send</button>
        </div>


        {% for student in usersList %}

            <div class="student-info-table">

                <div class="user-category-name student-category"></div>

                <div class="student-profile-picture">
                    <img src="../static/assets/images/student-card/student.png" alt="Student" class="student-picture" />
                </div>

                <div class="student-editable" id="{{ student.getId }}">
                    <ul class="student-information">
                        <li class="student-name" contenteditable="true">{{ student.getFirstName }} {{ student.getLastName }}</li>
                        <li class="student-email" contenteditable="true">{{ student.getEmail }}</li>
                        <li class="student-class-id" hidden>{{ student.getUserClass.getId }}</li>
                        <li class="student-class" contenteditable="true">{{ student.getUserClass.getName }}</li>
                        <li class="students-atrifacts">
                            <button type="button" class="students-artifacts-button">Artifacts</button>
                        </li>
                    </ul>

                    <button type="submit" name="submit-button" class="submit-button" onclick="editStudentInfoFromMainPage({{ student.getId }})">Save</button>
                </div>
            </div>
        {% endfor %}
    </div>

</section>

{% include "../static/footer.html" %}